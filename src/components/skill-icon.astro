---
import type { CollectionEntry } from "astro:content";
interface Props {
  skill: CollectionEntry<"skills">;
}

const { skill } = Astro.props;
---

<div
  class="flex flex-col text-sm justify-center items-center gap-1 bg-slate-600 rounded-xl aspect-square h-full w-full shadow-lg hover:scale-110 transition-transform hover:shadow-2xl"
>
  <img class="w-1/2 h-1/2" src={skill.data.logo} alt="" />
</div>
