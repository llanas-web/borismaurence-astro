---
import type { CollectionEntry } from "astro:content";
import { getEntries, getEntry } from "astro:content";
interface Props {
  project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
const skills = await getEntries(project.data.skills);
---

<article class="h-full flex flex-col">
  <div class="bg-slate-800 p-6">
    <div class="mb-4">
      <h2 class="font-bold text-xl mb-2">{project.data.title}</h2>
      <p class="text-gray-400 text-base">
        {project.data.description}
      </p>
    </div>
  </div>
  <!-- <img
    class="object-cover flex-grow"
    src={project.data.heroImage}
    alt={project.data.heroImage}
  /> -->
  <div class="flex justify-center items-center gap-4 p-6 mt-auto">
    {
      skills.map((skill) => (
        <div class="flex flex-col text-sm w-fit justify-center items-center gap-1">
          <img class="w-8 h-8" src={skill.data.logo} alt="" />
          <span class="">{skill.data.title}</span>
        </div>
      ))
    }
  </div>
</article>
